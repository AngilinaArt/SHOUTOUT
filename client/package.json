{
  "name": "shoutout-client",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.shoutout.app",
    "productName": "Hamster & Toast",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "preload_compose.js",
      "renderer/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon/icon.png",
      "target": ["dmg"]
    },
    "win": {
      "icon": "assets/icon/icon.ico",
      "target": ["nsis"]
    },
    "linux": {
      "icon": "assets/icon",
      "target": ["AppImage"]
    }
  }
}
